<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Primary Colors -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="#0078D4"/>
    <SolidColorBrush x:Key="PrimaryHoverBrush" Color="#106EBE"/>
    <SolidColorBrush x:Key="PrimaryPressedBrush" Color="#005A9E"/>

    <!-- Background Colors -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="#F3F3F3"/>
    <SolidColorBrush x:Key="BorderBrush" Color="#D1D1D1"/>

    <!-- Text Colors -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#000000"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#666666"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#666666"/>

    <!-- Accent Colors -->
    <SolidColorBrush x:Key="AccentBrush" Color="#0078D4"/>

    <!-- Code Editor Colors -->
    <SolidColorBrush x:Key="CodeBackgroundBrush" Color="#F5F5F5"/>

    <!-- Syntax Highlighting Colors -->
    <SolidColorBrush x:Key="KeywordBrush" Color="#0000FF"/>
    <SolidColorBrush x:Key="StringBrush" Color="#A31515"/>
    <SolidColorBrush x:Key="NumberBrush" Color="#008080"/>
    <SolidColorBrush x:Key="CommentBrush" Color="#008000"/>
    <SolidColorBrush x:Key="OperatorBrush" Color="#808080"/>

    <!-- Status Colors -->
    <SolidColorBrush x:Key="SuccessBrush" Color="#107C10"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="#E81123"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#FF8C00"/>

</ResourceDictionary>
