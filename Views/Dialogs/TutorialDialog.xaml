<Window x:Class="PseudoRun.Desktop.Views.Dialogs.TutorialDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tutorial"
        Width="700"
        Height="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="{StaticResource AccentBrush}"
                Padding="20,15">
            <TextBlock Text="{Binding CurrentStep.Title}"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="White"
                       TextWrapping="Wrap"/>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      Padding="20">
            <StackPanel>
                <!-- Description -->
                <TextBlock Text="{Binding CurrentStep.Content}"
                           FontSize="14"
                           TextWrapping="Wrap"
                           Margin="0,0,0,20"/>

                <!-- Code Block -->
                <StackPanel Visibility="{Binding HasCode, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="Example Code:"
                               FontWeight="Bold"
                               FontSize="13"
                               Margin="0,0,0,10"/>

                    <Border Background="{StaticResource CodeBackgroundBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="3"
                            Padding="15"
                            Margin="0,0,0,15">
                        <TextBlock Text="{Binding CurrentStep.Code}"
                                   FontFamily="Consolas"
                                   FontSize="12"
                                   TextWrapping="Wrap"/>
                    </Border>

                    <Button Content="Try This Code"
                            Command="{Binding TryCodeCommand}"
                            Style="{StaticResource PrimaryButton}"
                            Width="150"
                            HorizontalAlignment="Left"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2"
                Background="{StaticResource SurfaceBrush}"
                Padding="20,15"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Progress -->
                <TextBlock Grid.Column="0"
                           Text="{Binding ProgressText}"
                           VerticalAlignment="Center"
                           FontSize="12"
                           Foreground="{StaticResource SecondaryTextBrush}"/>

                <!-- Navigation Buttons -->
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal">
                    <Button Content="Previous"
                            Command="{Binding PreviousCommand}"
                            Width="90"
                            Margin="0,0,10,0"/>
                    <Button Content="{Binding IsLastStep, Converter={StaticResource LastStepButtonTextConverter}}"
                            Command="{Binding NextCommand}"
                            Style="{StaticResource PrimaryButton}"
                            Width="90"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
