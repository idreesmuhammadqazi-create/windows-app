<Window x:Class="PseudoRun.Desktop.Views.Dialogs.PracticeProblemsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Practice Problems"
        Width="900"
        Height="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel: Problem List with Filters -->
        <Grid Grid.Column="0" Margin="0,0,10,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Filters -->
            <StackPanel Grid.Row="0" Margin="0,0,0,10">
                <TextBlock Text="Level:" FontWeight="Bold" Margin="0,0,0,5"/>
                <ComboBox ItemsSource="{Binding AvailableLevels}"
                          SelectedItem="{Binding SelectedLevel}"
                          Margin="0,0,0,10"/>

                <TextBlock Text="Topic:" FontWeight="Bold" Margin="0,0,0,5"/>
                <ComboBox ItemsSource="{Binding AvailableTopics}"
                          SelectedItem="{Binding SelectedTopic}"/>
            </StackPanel>

            <!-- Problem Count -->
            <TextBlock Grid.Row="1"
                       Text="{Binding FilteredProblems.Count, StringFormat='{}Problems: {0}'}"
                       FontSize="12"
                       Foreground="Gray"
                       Margin="0,0,0,5"/>

            <!-- Problem List -->
            <Border Grid.Row="2"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1">
                <ListBox ItemsSource="{Binding FilteredProblems}"
                         SelectedItem="{Binding SelectedProblem}"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="5">
                                <TextBlock Text="{Binding Title}"
                                           FontWeight="Bold"
                                           TextWrapping="Wrap"/>
                                <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                                    <TextBlock Text="{Binding Level}"
                                               FontSize="10"
                                               Foreground="{StaticResource SecondaryTextBrush}"
                                               Margin="0,0,5,0"/>
                                    <TextBlock Text="•"
                                               FontSize="10"
                                               Foreground="{StaticResource SecondaryTextBrush}"
                                               Margin="0,0,5,0"/>
                                    <TextBlock Text="{Binding Topic}"
                                               FontSize="10"
                                               Foreground="{StaticResource SecondaryTextBrush}"/>
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>
        </Grid>

        <!-- Right Panel: Problem Details -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Problem Details -->
            <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="10">
                    <!-- Problem Title -->
                    <TextBlock Text="{Binding SelectedProblem.Title}"
                               FontSize="18"
                               FontWeight="Bold"
                               TextWrapping="Wrap"
                               Margin="0,0,0,10"/>

                    <!-- Level and Topic -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <Border Background="{StaticResource AccentBrush}"
                                CornerRadius="3"
                                Padding="8,3">
                            <TextBlock Text="{Binding SelectedProblem.Level}"
                                       Foreground="White"
                                       FontSize="11"
                                       FontWeight="Bold"/>
                        </Border>
                        <Border Background="{StaticResource SurfaceBrush}"
                                CornerRadius="3"
                                Padding="8,3"
                                Margin="8,0,0,0">
                            <TextBlock Text="{Binding SelectedProblem.Topic}"
                                       FontSize="11"/>
                        </Border>
                    </StackPanel>

                    <!-- Description -->
                    <TextBlock Text="Description:"
                               FontWeight="Bold"
                               Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding SelectedProblem.Description}"
                               TextWrapping="Wrap"
                               Margin="0,0,0,15"/>

                    <!-- Hints -->
                    <TextBlock Text="Hints:"
                               FontWeight="Bold"
                               Margin="0,0,0,5"/>
                    <ItemsControl ItemsSource="{Binding SelectedProblem.Hints}"
                                  Margin="0,0,0,15">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="0,2">
                                    <TextBlock Text="•" Margin="0,0,5,0"/>
                                    <TextBlock Text="{Binding}" TextWrapping="Wrap"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Solution Section -->
                    <StackPanel>
                        <TextBlock Text="Solution:"
                                   FontWeight="Bold"
                                   Margin="0,0,0,5"/>

                        <!-- Show Solution Button -->
                        <Button Content="Show Solution"
                                Command="{Binding ShowSolutionCommand}"
                                Visibility="{Binding IsSolutionVisible, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                                Width="150"
                                HorizontalAlignment="Left"
                                Margin="0,5,0,10"/>

                        <!-- Solution Display -->
                        <StackPanel Visibility="{Binding IsSolutionVisible, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Border Background="{StaticResource CodeBackgroundBrush}"
                                    BorderBrush="{StaticResource BorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="3"
                                    Padding="10"
                                    Margin="0,0,0,10">
                                <TextBlock Text="{Binding SelectedProblem.Solution}"
                                           FontFamily="Consolas"
                                           FontSize="12"
                                           TextWrapping="Wrap"/>
                            </Border>

                            <Button Content="Hide Solution"
                                    Command="{Binding HideSolutionCommand}"
                                    Width="150"
                                    HorizontalAlignment="Left"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>

            <!-- Bottom Buttons -->
            <StackPanel Grid.Row="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="10,10,10,0">
                <Button Content="Load to Editor"
                        Command="{Binding LoadToEditorCommand}"
                        Style="{StaticResource PrimaryButton}"
                        Width="120"
                        Margin="0,0,10,0"/>
                <Button Content="Close"
                        IsCancel="True"
                        Width="80"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
