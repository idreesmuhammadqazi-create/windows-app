<UserControl x:Class="PseudoRun.Desktop.Views.Controls.OutputPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource SurfaceBrush}" Padding="5">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Output" FontWeight="Bold" VerticalAlignment="Center"/>
                <Button Content="Clear"
                        Command="{Binding ClearOutputCommand}"
                        Margin="10,0,0,0"
                        Padding="8,2"
                        FontSize="12"/>
            </StackPanel>
        </Border>

        <!-- Output Display -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Auto"
                      Name="OutputScrollViewer">
            <ItemsControl ItemsSource="{Binding OutputLines}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}"
                                   FontFamily="Consolas"
                                   FontSize="12"
                                   Padding="5,2"
                                   TextWrapping="NoWrap"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>
