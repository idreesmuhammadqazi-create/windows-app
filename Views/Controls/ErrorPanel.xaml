<UserControl x:Class="PseudoRun.Desktop.Views.Controls.ErrorPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Border Background="#FFF4F4"
            BorderBrush="{StaticResource ErrorBrush}"
            BorderThickness="1"
            CornerRadius="3"
            Margin="5"
            Visibility="{Binding HasErrors, Converter={StaticResource BoolToVisibilityConverter}}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0"
                    Background="{StaticResource ErrorBrush}"
                    Padding="10,5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock Text="âš "
                                   FontSize="14"
                                   Foreground="White"
                                   Margin="0,0,8,0"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="Errors"
                                   FontWeight="Bold"
                                   FontSize="13"
                                   Foreground="White"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding ErrorCount, StringFormat=' ({0})'}"
                                   FontSize="12"
                                   Foreground="White"
                                   VerticalAlignment="Center"
                                   Margin="3,0,0,0"/>
                    </StackPanel>

                    <Button Grid.Column="1"
                            Content="âœ•"
                            Command="{Binding ClearErrorsCommand}"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="White"
                            FontWeight="Bold"
                            FontSize="14"
                            Padding="8,2"
                            Cursor="Hand"
                            ToolTip="Clear errors">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#CC0000"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>

            <!-- Error List -->
            <ScrollViewer Grid.Row="1"
                          VerticalScrollBarVisibility="Auto"
                          MaxHeight="150">
                <ItemsControl ItemsSource="{Binding Errors}"
                              Padding="10,5">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White"
                                    BorderBrush="#FFCCCC"
                                    BorderThickness="1"
                                    CornerRadius="2"
                                    Padding="10,8"
                                    Margin="0,3"
                                    Cursor="Hand"
                                    ToolTip="Click to jump to error location">
                                <Border.InputBindings>
                                    <MouseBinding Gesture="LeftClick"
                                                Command="{Binding DataContext.JumpToErrorCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                CommandParameter="{Binding}"/>
                                </Border.InputBindings>
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#FFEEEE"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>

                                <StackPanel>
                                    <!-- Error Message -->
                                    <TextBlock Text="{Binding Message}"
                                               TextWrapping="Wrap"
                                               FontSize="13"
                                               Foreground="#CC0000"
                                               FontWeight="SemiBold"/>

                                    <!-- Error Location -->
                                    <StackPanel Orientation="Horizontal"
                                                Margin="0,5,0,0"
                                                Visibility="{Binding HasLocation, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <TextBlock Text="ðŸ“"
                                                   FontSize="11"
                                                   Margin="0,0,5,0"/>
                                        <TextBlock FontSize="11"
                                                   Foreground="#666666">
                                            <Run Text="Line "/>
                                            <Run Text="{Binding Line}" FontWeight="Bold"/>
                                            <Run Text=", Column "/>
                                            <Run Text="{Binding Column}" FontWeight="Bold"/>
                                        </TextBlock>
                                    </StackPanel>

                                    <!-- Error Type -->
                                    <Border Background="#FFEEEE"
                                            BorderBrush="#FFCCCC"
                                            BorderThickness="1"
                                            CornerRadius="2"
                                            Padding="5,2"
                                            HorizontalAlignment="Left"
                                            Margin="0,5,0,0">
                                        <TextBlock Text="{Binding Type}"
                                                   FontSize="10"
                                                   Foreground="#CC0000"
                                                   FontWeight="Bold"/>
                                    </Border>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Border>
</UserControl>
