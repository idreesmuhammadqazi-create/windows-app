    "code": "// Selection Sort algorithm\nDECLARE Numbers : ARRAY[1:6] OF INTEGER\nDECLARE i, j, MinIndex, Temp : INTEGER\n\nNumbers[1] <- 64\nNumbers[2] <- 25\nNumbers[3] <- 12\nNumbers[4] <- 22\nNumbers[5] <- 11\nNumbers[6] <- 90\n\nOUTPUT \"Before sorting:\"\nFOR i <- 1 TO 6\n    OUTPUT Numbers[i]\nNEXT i\n\n// Selection Sort\nFOR i <- 1 TO 5\n    MinIndex <- i\n    FOR j <- i + 1 TO 6\n        IF Numbers[j] < Numbers[MinIndex] THEN\n            MinIndex <- j\n        ENDIF\n    NEXT j\n    IF MinIndex <> i THEN\n        Temp <- Numbers[i]\n        Numbers[i] <- Numbers[MinIndex]\n        Numbers[MinIndex] <- Temp\n    ENDIF\nNEXT i\n\nOUTPUT \"After sorting:\"\nFOR i <- 1 TO 6\n    OUTPUT Numbers[i]\nNEXT i",
